<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="PopwindowStyle" parent="android:Animation">  
        <item name="@android:windowEnterAnimation">@anim/head_in</item>  //进入时的动画   
        <item name="@android:windowExitAnimation">@anim/head_out</item>    //退出时的动画   
    </style>
    <style name="MenuItemTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
     	<item name="android:gravity">center</item>
     	<item name="android:layout_marginLeft">10dp</item>
     	<item name="android:textColor">@color/white</item>
    </style> 
    <style name="MenuItemImageStyle">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="MenuItemLineStyle">
       	<item name="android:layout_width">fill_parent</item>
       	<item name="android:layout_height">0.2dp</item>
       	<item name="android:background">@color/black</item>
    </style>
    <style name="tabTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15dip</item>
        <item name="android:padding">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
